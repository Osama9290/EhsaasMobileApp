<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_don_blood"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donate Blood"
            android:textAlignment="center"
            android:padding="12dp"
            android:background="@color/color_primary"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="22sp"/>


        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_arrow_back_24"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
         >
            <ImageView
                android:id="@+id/imgView"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:background="@drawable/background_fields"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/upload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#fff"
                android:drawableBottom="@drawable/cloud"
                android:text="Upload Picture"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/blood_group"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Blood Group*"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/blood_cat"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp"
                android:textSize="16sp"
                android:paddingStart="10dp"
                android:background="@drawable/background_fields"
                android:textAlignment="textStart"/>

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Age(Between 18 and 65 years)*"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/age_cat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_fields"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:text="Gender"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/gender_cat"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:layout_below="@id/age_cat"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_fields"
                android:layout_toRightOf="@id/age"/>

            <TextView
                android:id="@+id/last_don"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Last Donated (month/year)"
                android:textColor="@color/black"
                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/last_don_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_fields"
                android:hint="If any"
                android:inputType="date"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#a5a4a4" />

            <TextView
                android:id="@+id/illness"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="Illness"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/illness_cat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_fields"
                android:hint="If any"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#a5a4a4" />

            <TextView
                android:id="@+id/medication"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="Current Medication"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/medication_cat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_fields"
                android:hint="If any"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#a5a4a4" />

            <TextView
                android:id="@+id/vaccination"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="List your Vaccinations"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/vaccination_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_fields"
                android:hint="If any"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textColorHint="#a5a4a4" />

            <TextView
                android:id="@+id/blood_trans"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/vaccination"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Have you ever received bloods?"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/blood_trans_cat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_fields"/>


            <TextView
                android:id="@+id/smoke"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="Do you smoke?"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/smoke_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_fields"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:textColor="#a5a4a4"
                android:textColorHint="#a5a4a4" />

            <TextView
                android:id="@+id/province"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="Province*"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/province_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_fields"
                android:hint=""
                android:textSize="16sp"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColor="#a5a4a4"
                android:textColorHint="#a5a4a4" />


            <TextView
                android:id="@+id/city"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="City*"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/city_et"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_fields"
                android:hint=""
                android:textSize="16sp"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textColor="@color/black"/>


            <Button
                android:id="@+id/Save"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_btn"
                android:text="Save"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:layout_marginTop="50dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_below="@+id/city"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp" />



        </LinearLayout>
    </ScrollView>







</LinearLayout>